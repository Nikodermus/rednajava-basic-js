@import 'nib'

vendor-prefixes = webkit moz o ms official

//Recommended font sizes
 f12 = 0.75rem
 f16 = 1rem
 f21 = 1.3125rem
 f28 = 1.75rem
 f37 = 2.3125rem
 f50 = 3.1250rem
 f67 = 4.1875rem
 f89 = 5.5625rem
f119 = 7.4375rem
f159 = 9.9375rem

// Generales
@-ms-viewport
    width device-width

html
    box-sizing border-box
    font-size 16px
*
*:after
*:before
    margin 0
    padding 0
    box-sizing inherit
    transition all ease 0.3s
    &:hover
        transition all ease 0.3s
a
a:visited
a:focus
    text-decoration none
    color inherit
    &:hover
        text-decoration none
        color inherit
body
    font-family sans-serif
    font-size 1em
    width 100%
    max-width 100vw
    padding 2rem
    height 100vh
    overflow-x hidden
h1
h2
h3
h4
h5
h6
    font-weight bolder
    margin 0
    padding 0
img 
    width 100%
    max-width 100%
    
//Special Classes
.bold
    font-weight bolder
.f0
    font-size f12 !important
.f1
    font-size f16 !important
.f2
    font-size f21 !important
.f3
    font-size f28 !important
.f4
    font-size f37 !important
.f5
    font-size f50 !important
.f6
    font-size f67 !important
.f7
    font-size f89 !important
.f8
    font-size f119 !important
.f9
    font-size f159 !important
.square
    > *
        position absolute
        width 100%
        height 100%
        
    &:after
        content ""
        display block
        padding-bottom 100%
// Index
.square
    display inline-block
    transform-style preserve-3d
    transform-origin right center
    margin -3.75px
    figure
        display block
        position absolute
        width 100%
        height 100%
        backface-visibility hidden
        &.front
            background-image url('../img/logo.svg')
        &.back
            transform rotateY(180deg)
            &.green
                background green
            &.red
                background red
            &.blue
                background blue
            &.yellow
                background yellow
                
    &.active
    &.permActive
        transform  translateX( -100% ) rotateY( -180deg );
    
        

// Media Query
 
@media (min-width: 993px) //Desktop
    .hidden-xl
        display none
    
@media (max-width: 992px) and (min-width: 769px) //Tablet
    .hidden-md
        display none
        
@media (max-width: 768px) //Mobile
    .hidden-xs
        display none